apiVersion: v1
kind: Service
metadata:
  name: service-{{ service }}
  labels:
    name: service-{{ service }}
    component: service
    version: "{{ versions }}"
spec:
  ports:
  - name: http
    port: 80
  selector:
    name: service-{{ service }}
    component: service
    version: "{{ versions }}"
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: service-{{ service }}
  labels:
    name: service-{{ service }}
    component: service
    version: "{{ versions }}"
spec:
  replicas: {{ replicas }}
  strategy:
    type: Recreate
  selector:
    matchLabels:
      name: service-{{ service }}
      component: service
      version: "{{ versions }}"
  template:
    metadata:
      labels:
        name: service-{{ service }}
        component: service
        version: "{{ versions }}"
      annotations:
        sidecar.istio.io/inject: "true"
    spec:
      containers:
      - name: service-{{ service }}
        image: registry.hub.docker.com/garystafford/go-srv-{{ service }}:{{ versions }}
        resources:
        # requests:
        #   memory: 100M
        #   cpu: 100m
        # limits:
        #   memory: 250M
        #   cpu: 250m
        env:
        - name: MONGO_CONN
          valueFrom:
            configMapKeyRef:
              name: go-srv-config
              key: mongodb.conn
        - name: RABBITMQ_CONN
          valueFrom:
            configMapKeyRef:
              name: go-srv-config
              key: rabbitmq.conn
        ports:
        - containerPort: 80
        imagePullPolicy: Always #IfNotPresent
