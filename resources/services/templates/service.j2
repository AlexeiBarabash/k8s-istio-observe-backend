apiVersion: v1
kind: Service
metadata:
  name: service-{{ service }}
  labels:
    app: service-{{ service }}
spec:
  ports:
  - name: http
    port: 8000
  selector:
    app: service-{{ service }}
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: service-{{ service }}
  labels:
    app: service-{{ service }}
spec:
  replicas: {{ replicas }}
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: service-{{ service }}
  template:
    metadata:
      labels:
        app: service-{{ service }}
      annotations:
        sidecar.istio.io/inject: "true"
    spec:
      containers:
      - name: service-{{ service }}
        image: registry.hub.docker.com/garystafford/go-srv-{{ service }}:1.0.0
        resources:
        # requests:
        #   memory: 100M
        #   cpu: 100m
        # limits:
        #   memory: 250M
        #   cpu: 250m
        env:
        - name: MONGO_CONN
          valueFrom:
            configMapKeyRef:
              name: go-srv-config
              key: mongodb.conn
        - name: RABBITMQ_CONN
          valueFrom:
            configMapKeyRef:
              name: go-srv-config
              key: rabbitmq.conn
        ports:
        - containerPort: 8000
        imagePullPolicy: IfNotPresent
